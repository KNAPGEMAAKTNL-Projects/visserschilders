---
import { FadeIn } from "./ui/FadeIn";

import { projects as allProjects } from "../data/projects";

// Pick a few distinct projects for the homepage
// Use all projects and map the size property to className
const projects = allProjects.map((p) => ({
    ...p,
    className: p.size || "",
}));
---

<section class="py-24 bg-background-base overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
            class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6"
        >
            <div class="max-w-xl">
                <span
                    class="text-accent uppercase tracking-widest text-xs font-semibold"
                    >Portfolio</span
                >
                <h2 class="mt-4 text-4xl font-serif text-primary">
                    Gerealiseerd Werk.
                </h2>
                <p class="mt-4 text-text-muted text-lg">
                    Een selectie van onze recente projecten in de regio.
                </p>
            </div>
            <a
                href="/portfolio"
                class="inline-flex items-center px-6 py-3 border border-primary text-primary hover:bg-primary hover:text-white transition-colors duration-300 rounded-sm font-medium text-sm"
            >
                Bekijk alle projecten
            </a>
        </div>

        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 auto-rows-[24rem]"
        >
            {
                projects.map((project, index) => (
                    <FadeIn
                        client:visible
                        delay={index * 0.1}
                        className={`group relative h-full min-h-[24rem] overflow-hidden rounded-sm cursor-pointer ${project.className || ""}`}
                    >
                        <a
                            href={`/portfolio/${project.slug}`}
                            class="block w-full h-full"
                        >
                            <div
                                class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                                style={`background-image: url('${project.image}');`}
                            />
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors duration-500" />
                            <div class="absolute bottom-6 left-6 text-white translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                                <span class="text-xs uppercase tracking-wider text-accent mb-1 block">
                                    {project.category}
                                </span>
                                <h3 class="text-2xl font-serif text-white">
                                    {project.title}
                                </h3>
                            </div>
                        </a>
                    </FadeIn>
                ))
            }
        </div>
    </div>
</section>
