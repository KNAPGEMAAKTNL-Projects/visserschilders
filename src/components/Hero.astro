---
import { Image } from "astro:assets";
import heroImage from "../assets/images/hero-interior.webp";
---

<section
    class="relative bg-background-base overflow-hidden min-h-screen flex items-center"
>
    <!-- Split Layout Container -->
    <div
        class="max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 h-full flex items-center my-20 lg:my-0"
    >
        <div
            class="flex flex-col-reverse lg:flex-row shadow-2xl bg-white rounded-none lg:rounded-sm overflow-hidden w-full pb-10 lg:pb-0"
        >
            <!-- Text Content (Left) -->
            <div
                class="w-full lg:w-1/2 flex flex-col justify-center p-6 sm:p-8 lg:p-12 xl:p-16 bg-white z-10 relative -mt-12 lg:mt-0 rounded-t-xl lg:rounded-none shadow-[0_-10px_20px_rgba(0,0,0,0.05)] lg:shadow-none"
            >
                <div class="animate-fade-up" style="animation-delay: 0.1s;">
                    <span
                        class="inline-block py-1 px-3 rounded-full bg-background-base text-accent text-xs font-semibold tracking-widest uppercase mb-6 border border-accent/20"
                    >
                        Exclusief Schilderwerk
                    </span>
                    <h1
                        class="font-serif text-4xl lg:text-5xl xl:text-6xl text-primary font-medium leading-tight mb-6"
                    >
                        Oog voor detail. <br />
                        <span class="lg:whitespace-nowrap"
                            ><span class="text-accent italic">Liefde</span> voor het&nbsp;vak.</span
                        >
                    </h1>
                    <p
                        class="text-text-muted text-lg leading-relaxed mb-8 max-w-xl"
                    >
                        Schildersbedrijf Visser brengt rust, kwaliteit en
                        duurzaamheid in uw woning. Uw meesterschilder in de
                        Betuwe voor als het Ã©cht goed moet zijn.
                    </p>

                    <div class="flex flex-col sm:flex-row gap-4">
                        <a
                            href="/contact"
                            class="inline-flex justify-center items-center px-8 py-4 border border-transparent text-sm font-medium rounded-sm shadow-sm text-white bg-primary hover:bg-primary-light transition-all duration-300 transform hover:-translate-y-0.5"
                        >
                            Plan uw project
                        </a>
                        <a
                            href="/portfolio"
                            class="inline-flex justify-center items-center px-8 py-4 border border-primary/10 text-sm font-medium rounded-sm text-primary bg-transparent hover:bg-background-base transition-all duration-300"
                        >
                            Bekijk projecten
                        </a>
                    </div>
                </div>

                <!-- Trust / Quiet Authority -->
                <div
                    class="mt-12 lg:mt-20 pt-8 border-t border-primary/5 flex items-center gap-8 animate-fade-up"
                    style="animation-delay: 0.3s;"
                >
                    <div class="flex flex-col">
                        <span class="font-serif text-2xl text-primary">30+</span
                        >
                        <span
                            class="text-xs text-text-muted uppercase tracking-wider"
                            >Jaar Ervaring</span
                        >
                    </div>
                    <div class="h-8 w-px bg-primary/10"></div>
                    <div class="flex flex-col">
                        <span class="font-serif text-2xl text-primary"
                            >100%</span
                        >
                        <span
                            class="text-xs text-text-muted uppercase tracking-wider"
                            >Garantieregeling</span
                        >
                    </div>
                </div>
            </div>

            <!-- Image Content (Right) -->
            <div
                class="w-full lg:w-1/2 relative min-h-[45vh] lg:min-h-full bg-gray-100 overflow-hidden"
            >
                <!-- Hero Image -->
                <Image
                    src={heroImage}
                    alt="Professioneel schilderwerk in luxe interieur"
                    widths={[480, 768, 1024, 1200]}
                    sizes="(max-width: 1023px) 100vw, 50vw"
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 hover:scale-105"
                    loading="eager"
                    fetchpriority="high"
                    decoding="async"
                />

                <!-- Overlay -->
                <div class="absolute inset-0 bg-primary/10 mix-blend-multiply">
                </div>
            </div>
        </div>
    </div>
</section>
