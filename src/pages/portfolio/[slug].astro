---
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";
import { FadeIn } from "../../components/ui/FadeIn";

export function getStaticPaths() {
    return projects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

const { project } = Astro.props;
---

<Layout
    title={`${project.title} | Portfolio Schildersbedrijf Visser`}
    description={project.seoDescription || project.description}
>
    <!-- Hero / Image -->
    <section class="relative min-h-[70vh] flex items-center justify-center">
        <div class="absolute inset-0 z-0">
            <div class="absolute inset-0 bg-black/50 z-10"></div>
            <img
                src={project.image}
                alt={project.title}
                width="1200"
                height="800"
                class="w-full h-full object-cover"
                loading="eager"
                fetchpriority="high"
                decoding="async"
            />
        </div>
        <div class="relative z-10 text-center text-white px-4 max-w-5xl">
            <FadeIn client:load>
                <span
                    class="text-accent uppercase tracking-widest text-sm font-semibold mb-6 block"
                >
                    {project.category}
                </span>
                <h1
                    class="font-serif text-5xl md:text-7xl lg:text-8xl mb-8 text-white leading-tight"
                >
                    {project.title}
                </h1>
                <p
                    class="text-xl md:text-2xl text-white/90 font-light max-w-2xl mx-auto"
                >
                    {project.details?.location} â€” {project.details?.year}
                </p>
            </FadeIn>
        </div>
    </section>

    <!-- Details Content -->
    <section class="py-24 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Intro & Meta -->
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 mb-24">
                <div class="lg:col-span-8">
                    <h2
                        class="font-serif text-3xl md:text-4xl text-primary mb-6"
                    >
                        Over dit project
                    </h2>
                    <p
                        class="text-xl leading-relaxed text-text-muted font-light"
                    >
                        {project.description}
                    </p>
                </div>
                <div
                    class="lg:col-span-4 bg-background-base p-8 rounded-sm h-fit"
                >
                    <h3 class="font-serif text-xl text-primary mb-6">
                        Details
                    </h3>
                    <ul class="space-y-4">
                        <li
                            class="flex justify-between border-b border-gray-200 pb-2"
                        >
                            <span
                                class="text-text-muted text-sm uppercase tracking-wider"
                                >Locatie</span
                            >
                            <span class="text-primary font-medium text-right"
                                >{project.details?.location}</span
                            >
                        </li>
                        <li
                            class="flex justify-between border-b border-gray-200 pb-2"
                        >
                            <span
                                class="text-text-muted text-sm uppercase tracking-wider"
                                >Jaar</span
                            >
                            <span class="text-primary font-medium text-right"
                                >{project.details?.year}</span
                            >
                        </li>
                        <li
                            class="flex justify-between border-b border-gray-200 pb-2"
                        >
                            <span
                                class="text-text-muted text-sm uppercase tracking-wider"
                                >Service</span
                            >
                            <span class="text-primary font-medium text-right"
                                >{project.details?.service}</span
                            >
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Challenge & Solution (If available) -->
            {
                project.challenge && (
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-24 mb-24 border-t border-gray-100 pt-24">
                        <div>
                            <span class="text-accent text-sm uppercase tracking-widest font-semibold mb-4 block">
                                De Uitdaging
                            </span>
                            <h3 class="font-serif text-3xl text-primary mb-6">
                                Het vraagstuk
                            </h3>
                            <p class="text-lg text-text-muted leading-relaxed">
                                {project.challenge}
                            </p>
                        </div>
                        <div>
                            <span class="text-accent text-sm uppercase tracking-widest font-semibold mb-4 block">
                                Onze Oplossing
                            </span>
                            <h3 class="font-serif text-3xl text-primary mb-6">
                                Het resultaat
                            </h3>
                            <p class="text-lg text-text-muted leading-relaxed">
                                {project.solution}
                            </p>
                        </div>
                    </div>
                )
            }

            <!-- Gallery -->
            {
                project.gallery && project.gallery.length > 0 && (
                    <div class="mb-24">
                        <h2 class="font-serif text-3xl md:text-4xl text-primary mb-12 text-center">
                            In beeld
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {project.gallery.map((img, index) => (
                                <div
                                    class={`relative overflow-hidden group rounded-sm ${index === 0 ? "md:col-span-2 md:row-span-2 min-h-[400px]" : "min-h-[300px]"}`}
                                >
                                    <img
                                        src={img}
                                        alt={`Detail ${project.title} - ${index + 1}`}
                                        width="800"
                                        height="600"
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                                        loading="lazy"
                                        decoding="async"
                                    />
                                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-500" />
                                </div>
                            ))}
                        </div>
                    </div>
                )
            }

            <!-- Navigation -->
            <div class="text-center pt-12 border-t border-gray-100">
                <a
                    href="/portfolio"
                    class="inline-flex items-center px-8 py-4 border border-primary text-primary text-sm font-medium rounded-sm hover:bg-primary hover:text-white transition-all duration-300"
                >
                    <svg
                        class="w-4 h-4 mr-2 rotate-180"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                    >
                    Terug naar overzicht
                </a>
            </div>
        </div>
    </section>
</Layout>
