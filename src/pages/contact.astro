---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | Schildersbedrijf Visser">
    <section class="pt-32 pb-24 bg-background-base">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                <!-- Contact Info -->
                <div>
                    <span
                        class="text-accent uppercase tracking-widest text-xs font-semibold mb-6 block"
                        >Contact</span
                    >
                    <h1
                        class="font-serif text-4xl lg:text-5xl text-primary mb-8 leading-tight"
                    >
                        Laten we uw project bespreken.
                    </h1>
                    <p class="text-text-muted text-lg mb-12">
                        Heeft u een vraag of wilt u vrijblijvend advies? Wij
                        denken graag met u mee over kleuren, materialen en de
                        beste aanpak voor uw woning.
                    </p>

                    <div class="space-y-8">
                        <div>
                            <h3 class="font-serif text-xl text-primary mb-2">
                                Adres
                            </h3>
                            <p class="text-text-muted">
                                Laageinde 11, 4191 NR Geldermalsen
                            </p>
                        </div>
                        <div>
                            <h3 class="font-serif text-xl text-primary mb-2">
                                Telefoon
                            </h3>
                            <p class="text-text-muted">
                                <a
                                    href="tel:+31345616182"
                                    class="hover:text-primary transition-colors block"
                                    >0345 - 616 182</a
                                >
                                <a
                                    href="tel:+31623070327"
                                    class="hover:text-primary transition-colors block"
                                    >06 - 23 07 03 27</a
                                >
                            </p>
                        </div>
                        <div>
                            <h3 class="font-serif text-xl text-primary mb-2">
                                Email
                            </h3>
                            <p class="text-text-muted">
                                <a
                                    href="mailto:info@visserschilders.nl"
                                    class="hover:text-primary transition-colors"
                                    >info@visserschilders.nl</a
                                >
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Form (Consultative) -->
                <div class="bg-white p-8 lg:p-12 rounded-sm shadow-xl">
                    <h3 class="font-serif text-2xl text-primary mb-6">
                        Aanvraag Adviesgesprek
                    </h3>

                    <!-- Success Message (Demo Mode) -->
                    <div
                        id="successMessage"
                        class="hidden mb-6 p-6 bg-accent/5 border border-accent/20 rounded-sm"
                    >
                        <div class="text-center mb-4">
                            <span
                                class="inline-block px-3 py-1 bg-accent/10 text-accent text-xs font-medium rounded-sm mb-3"
                            >
                                DEMO MODUS
                            </span>
                            <h4 class="font-serif text-xl text-primary mb-2">
                                Formulier werkt!
                            </h4>
                            <p class="text-sm text-text-muted">
                                Dit is wat een klant zou zien na het versturen.
                            </p>
                        </div>

                        <div
                            class="bg-white p-5 rounded-sm border border-gray-200"
                        >
                            <p class="text-sm text-text-main mb-3">
                                <strong
                                    >Mogelijke automatiseringen bij activatie:</strong
                                >
                            </p>
                            <ul class="text-sm text-text-muted space-y-2">
                                <li class="flex items-start">
                                    <span class="text-accent mr-2 mt-0.5"
                                        >•</span
                                    >
                                    <span
                                        >Directe bevestigingsmail naar de klant</span
                                    >
                                </li>
                                <li class="flex items-start">
                                    <span class="text-accent mr-2 mt-0.5"
                                        >•</span
                                    >
                                    <span
                                        >Email met aanvraagdetails naar uw inbox</span
                                    >
                                </li>
                                <li class="flex items-start">
                                    <span class="text-accent mr-2 mt-0.5"
                                        >•</span
                                    >
                                    <span>WhatsApp melding op uw telefoon</span>
                                </li>
                                <li class="flex items-start">
                                    <span class="text-accent mr-2 mt-0.5"
                                        >•</span
                                    >
                                    <span
                                        >Automatisch opslaan in een overzicht
                                        (bijv. Excel)</span
                                    >
                                </li>
                                <li class="flex items-start">
                                    <span class="text-accent mr-2 mt-0.5"
                                        >•</span
                                    >
                                    <span
                                        >Herinnering aanmaken voor opvolging</span
                                    >
                                </li>
                            </ul>
                            <p
                                class="text-xs text-text-muted mt-4 pt-3 border-t border-gray-200"
                            >
                                Deze opties zijn eenvoudig in te schakelen
                                wanneer u de website live zet.
                            </p>
                        </div>
                    </div>

                    <form id="contactForm" class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="name"
                                    class="block text-sm font-medium text-text-main mb-2"
                                    >Naam</label
                                >
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    class="w-full px-4 py-3 bg-background-base border-transparent focus:border-accent focus:bg-white focus:ring-0 rounded-sm transition-all"
                                    placeholder="Uw naam"
                                />
                            </div>
                            <div>
                                <label
                                    for="phone"
                                    class="block text-sm font-medium text-text-main mb-2"
                                    >Telefoon</label
                                >
                                <input
                                    type="tel"
                                    id="phone"
                                    name="phone"
                                    class="w-full px-4 py-3 bg-background-base border-transparent focus:border-accent focus:bg-white focus:ring-0 rounded-sm transition-all"
                                    placeholder="06 12345678"
                                />
                            </div>
                        </div>
                        <div>
                            <label
                                for="email"
                                class="block text-sm font-medium text-text-main mb-2"
                                >Email</label
                            >
                            <input
                                type="email"
                                id="email"
                                name="email"
                                class="w-full px-4 py-3 bg-background-base border-transparent focus:border-accent focus:bg-white focus:ring-0 rounded-sm transition-all"
                                placeholder="email@voorbeeld.nl"
                            />
                        </div>
                        <div>
                            <label
                                for="service"
                                class="block text-sm font-medium text-text-main mb-2"
                                >Waar kunnen we u mee helpen?</label
                            >
                            <select
                                id="service"
                                name="service"
                                class="w-full px-4 py-3 bg-background-base border-transparent focus:border-accent focus:bg-white focus:ring-0 rounded-sm transition-all"
                            >
                                <option value="">Maak een keuze...</option>
                                <option value="binnenschilderwerk"
                                    >Binnenschilderwerk</option
                                >
                                <option value="buitenschilderwerk"
                                    >Buitenschilderwerk</option
                                >
                                <option value="wandafwerking"
                                    >Wandafwerking</option
                                >
                                <option value="monumentaal"
                                    >Monumentaal Onderhoud</option
                                >
                                <option value="spuitwerk">Spuitwerk</option>
                                <option value="meubels-restylen"
                                    >Meubels Restylen</option
                                >
                                <option value="verkoop-materialen"
                                    >Verkoop Verf & Materialen</option
                                >
                                <option value="anders">Anders</option>
                            </select>
                        </div>
                        <div>
                            <label
                                for="message"
                                class="block text-sm font-medium text-text-main mb-2"
                                >Bericht</label
                            >
                            <textarea
                                id="message"
                                name="message"
                                rows="4"
                                class="w-full px-4 py-3 bg-background-base border-transparent focus:border-accent focus:bg-white focus:ring-0 rounded-sm transition-all"
                                placeholder="Vertel ons kort over uw project..."
                            ></textarea>
                        </div>
                        <button
                            type="submit"
                            class="w-full px-8 py-4 bg-primary text-white font-medium rounded-sm hover:bg-primary-light transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 duration-300"
                        >
                            Verstuur aanvraag
                        </button>
                        <p class="text-xs text-text-muted text-center mt-4">
                            Wij nemen doorgaans binnen 1 werkdag contact op.
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById("contactForm") as HTMLFormElement;
        const successMessage = document.getElementById("successMessage");

        form?.addEventListener("submit", (e) => {
            e.preventDefault();

            // Show success message
            successMessage?.classList.remove("hidden");

            // Scroll to success message
            successMessage?.scrollIntoView({
                behavior: "smooth",
                block: "nearest",
            });

            // Optional: Reset form after showing message
            setTimeout(() => {
                form.reset();
            }, 500);
        });
    });
</script>
