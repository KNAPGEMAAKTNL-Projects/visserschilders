---
import Layout from "../../layouts/Layout.astro";
import { services } from "../../data/services";

export function getStaticPaths() {
    return services.map((service) => ({
        params: { slug: service.slug },
        props: { service },
    }));
}

const { service } = Astro.props;
---

<Layout title={`${service.title} | Schildersbedrijf Visser`}>
    <!-- Hero Section -->
    <section
        class="relative min-h-[60vh] flex items-center bg-primary text-white"
    >
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 z-0">
            <div
                class="absolute inset-0 bg-gradient-to-r from-primary/95 via-primary/85 to-primary/60 mix-blend-multiply z-10"
            >
            </div>
            <img
                src={service.image}
                alt={service.title}
                width="1200"
                height="800"
                class="w-full h-full object-cover"
                loading="eager"
                fetchpriority="high"
                decoding="async"
            />
        </div>

        <div
            class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 w-full"
        >
            <div class="max-w-3xl">
                <span
                    class="text-accent uppercase tracking-widest text-sm font-semibold mb-4 block"
                    >{service.category}</span
                >
                <h1
                    class="font-serif text-5xl lg:text-7xl mb-6 leading-tight text-white"
                >
                    {service.title}
                </h1>
                <p class="text-white text-xl lg:text-2xl max-w-2xl font-light">
                    {service.intro}
                </p>
            </div>
        </div>
    </section>

    <!-- Content Section -->
    <section class="py-24 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
                <!-- Main Content (Left) -->
                <div class="lg:col-span-12 lg:pr-12">
                    <div class="prose prose-lg prose-slate max-w-none">
                        <p
                            class="lead text-2xl text-primary font-serif italic mb-12 border-l-4 border-accent pl-6"
                        >
                            "Bij Schildersbedrijf Visser benaderen we {
                                service.title.toLowerCase()
                            } niet als een klus, maar als een ambacht."
                        </p>
                        <p
                            class="text-lg leading-relaxed text-text-muted mb-12"
                        >
                            {service.description}
                        </p>

                        <div
                            class="grid grid-cols-1 md:grid-cols-2 gap-12 not-prose mb-12"
                        >
                            <div class="bg-background-base p-8 rounded-sm">
                                <h3
                                    class="font-serif text-2xl text-primary mb-6"
                                >
                                    Onze Aanpak
                                </h3>
                                <ul class="space-y-4">
                                    {
                                        service.features.map((feature) => (
                                            <li class="flex items-start gap-3 text-text-muted">
                                                <svg
                                                    class="w-6 h-6 text-accent flex-shrink-0"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M5 13l4 4L19 7"
                                                    />
                                                </svg>
                                                <span>{feature}</span>
                                            </li>
                                        ))
                                    }
                                </ul>
                            </div>
                            <div class="flex flex-col justify-center">
                                <h3
                                    class="font-serif text-2xl text-primary mb-4"
                                >
                                    Waarom Visser?
                                </h3>
                                <p class="text-text-muted text-lg mb-6">
                                    Omdat u het verschil ziet. In de strakke
                                    lijnen, de volle glans en de duurzaamheid.
                                    Wij schilderen voor de lange termijn.
                                </p>
                                <a
                                    href="/contact"
                                    class="inline-flex items-center text-primary font-medium hover:text-accent transition-colors group"
                                >
                                    Plan een vrijblijvend adviesgesprek
                                    <svg
                                        class="w-4 h-4 ml-2 transform transition-transform group-hover:translate-x-1"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                        ><path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"
                                        ></path></svg
                                    >
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA Strip -->
        <div class="border-t border-gray-100 mt-16">
            <div
                class="max-w-7xl mx-auto px-4 py-16 sm:px-6 lg:px-8 text-center bg-background-base/50"
            >
                <h2 class="font-serif text-3xl text-primary mb-6">
                    Klaar voor de volgende stap?
                </h2>
                <a
                    href="/contact"
                    class="inline-flex justify-center items-center px-8 py-4 bg-primary text-white text-sm font-medium rounded-sm hover:bg-primary-light transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
                >
                    Vraag een offerte aan voor {service.title.toLowerCase()}
                </a>
            </div>
        </div>
    </section>
</Layout>
